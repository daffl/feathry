{
  "host": "localhost",
  "port": 3030,<% if(database === 'mongodb'){ %>
  "mongodb": "mongodb://localhost:27017/feathers",<% } else if(database === 'mariadb'){ %>
  "mariadb": "mariadb://root:@localhost:3306/feathers",<% } else if(database === 'mssql'){ %>
  "mssql": "mssql://root:@localhost:1433/feathers",<% } else if(database === 'mysql'){ %>
  "mysql": "mysql://root:@localhost:3306/feathers",<% } else if(database === 'postgres'){ %>
  "postgres": "postgres://postgres:@localhost:5432/feathers",<% } else if(database === 'nedb'){ %>
  "nedb": "../data/",<% } else if(database === 'sqlite'){ %>
  "sqlite": "../data/feathers.sqlite",<% } %>
  "public": "../public/"<% if (authentication.length) { %>,
  "auth": {
    "token": {
      "secret": "<%= secret %>"
    }<% if (localAuth) { %>,
    "local": {}<% } else { %>
    "local": false<% } %><% for (var i = 0; i < authentication.length; i++) { %>,
    "<%= authentication[i].name %>": {
      "clientID": "your <%= authentication[i].name %> client id",
      "clientSecret": "your <%= authentication[i].name %> client secret",
      "permissions": {
        "scope": [<% for (var j=0; j < authentication[i].permissions.scope.length; j++) { %>"<%= authentication[i].permissions.scope[j]%>"<% if (j !== authentication[i].permissions.scope.length - 1) { %>,<% }} %>]
      }
    }<% } %>
  }<% } %><% if (cors === 'whitelisted') { %>,
  "corsWhitelist": [<% corsWhitelist.forEach(function(domain, index, list){ %>
    "<%= domain.trim() %>"<% if(index + 1 !== list.length){ %>,<% } %><% }); %>
  ]<% } %>
}
